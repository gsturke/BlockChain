<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/request"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="0dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="347px"
        android:layout_height="91px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="94dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="101dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="305dp"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btc"
        android:layout_marginBottom="295dp"
        android:text="Regular"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="315dp" />


    <EditText
        android:id="@+id/usd"
        android:layout_width="131dp"
        android:layout_height="34dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="248dp"
        android:background="@color/colorAccent1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  0           USD"
        android:textColor="#ebebeb"
        android:textSize="14dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="256dp" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="304dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"

        android:layout_alignStart="@+id/spinner1"
        android:layout_marginBottom="217dp"
        android:background="@color/colorAccent1"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:text=" What's the transaction for?"
        android:textAlignment="viewStart"
        android:textColor="#ebebeb"
        android:textSize="14dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="385dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="302dp"
        android:layout_height="36dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="166dp"
        android:layout_marginStart="29dp"
        android:background="#88d6f1"
        android:shadowColor="#88d6f1"
        android:text="NEXT"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="454dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/usd"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-12dp"
        android:layout_marginTop="160dp"
        android:background="#004a7c"
        android:shadowColor="#88d6f1"
        android:text="Copy"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="162dp" />

    <EditText
        android:id="@+id/btc"
        android:layout_width="407px"
        android:layout_height="103px"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/usd"
        android:layout_marginStart="27dp"
        android:background="@color/colorAccent1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  0           BTC"
        android:textColor="#ebebeb"
        android:textSize="14dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="256dp" />

</RelativeLayout>